<div id="<%= dom_id thatch %>" class="flex justify-center items-center max-w-80">
  <div class="flex bg-yellow-600 rounded m-3">
      <div class="object-contain w-28 p-2">
    <%= link_to thatch do %>
        <%= image_tag( thatch.album_art, class: "rounded ") if thatch.album_art %>
      </div>
      <div class="flex flex-col justify-center items-start px-3">
        <p class="flex flex-wrap my-1 font-bold">
          <%= thatch.song_title %> | <%= thatch.artist %>
        </p>
        <p class="my-1">
          <%= thatch.year.strftime('%Y') %>
        </p>
    <% end %>
      </div>
  </div>
</div>
