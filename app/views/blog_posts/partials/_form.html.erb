<%= form_with model: blog_post do |form| %> 
    <% if form.object.errors.any? %>
        <div>
            <% form.object.errors.full_messages.each do |message|  %>
            <div class="text-red-500"><%= message %></div>
            <% end %>
        </div>
    <% end %>

    <div class="flex flex-col justify-center align-middle items-center my-2">
        <div class="text-xl">
            <%= form.label :cover_image %>
        </div>
        <% if blog_post.cover_image.present? %>
            <div id="<%= dom_id(blog_post, :cover_image) %>" class="flex flex-col justify-center items-center">
                <%= image_tag blog_post.cover_image, class: "w-1/3 py-2" %>
                <%= link_to "Remove cover image", blog_post_cover_image_path(blog_post), class: "border border-input-background-100 rounded bg-red-400 py-1 px-2 my-2", data: { turbo_method: :delete, turbo_confirm: "are you sure?" } %>
            </div>
        <% end %>
        <div class="border border-input-background-100 rounded p-2">
            <%= form.file_field :cover_image %>
        </div>
        <div class="my-2">
            <%= form.label :title, class: "bg-sky-50 bg-opacity-50 border border-input-background-100 py-2 px-1 pe-2 rounded" %>
            <%= form.text_field :title, class: "rounded" %>
        </div>
        <div class="flex flex-col justify-center items-center">
            <%= form.label :content %>
            <%= form.rich_text_area :content, class: "custom-min-height w-5/6" %>
        </div>
        <div class="py-2">
            <%= form.label :published_at, class: "bg-sky-50 bg-opacity-50 border border-input-background-100 py-2 px-1 pe-2 rounded" %>
            <%= form.datetime_select :published_at, include_blank: true %>
        </div>
    </div>
    <%= form.button class: "border border-input-background-100 rounded bg-sky-400 py-1 px-2 my-2" %>
<% end %>
