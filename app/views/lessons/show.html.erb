<main class="flex flex-col lg:flex-row mx-auto pb-6 bg-slate-50 mt-2">
  <div class="mx-auto w-full lg:px-4">

    <div class="relative overflow-hidden w-full pt-[56.25%] min-w-[426px]">
        <iframe class="absolute top-0 left-0 bottom-0 right-0 w-full h-full" src="https://www.youtube.com/embed/<%= @lesson.key %>" frameborder="0"></iframe>
    </div>
    <div class="my-2 p-4 border rounded">
      <h1 class="text-2xl font-semibold"><%= @lesson.title %></h1>
      <p class="text-gray-700"><%= @lesson.description %></p>
    </div>
    <div class="mt-6 lg:mb-0">
      <%= link_to "Mark as complete", course_lesson_path(@course, @lesson), data: { "turbo-method" => :put }, class: "rounded text-white bg-teal-500 hover:bg-teal-600 px-4 py-2" %>
    </div>
  </div>
  <div class="sidebar_contianer lg:min-w-60 lg:mx-4 lg:overflow-y-scroll">
    <%= render "sidebar", course: @course, completed_lessons: @completed_lessons %>
  </div>
</main>
