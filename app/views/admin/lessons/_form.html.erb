<%= form_with(model: [:admin, @admin_course, admin_lesson]) do |form| %>
  <% if admin_lesson.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(admin_lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
        <% admin_lesson.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col">
    <label class="text-sm" for="title">Title</label>
    <%= form.text_field :title, class: "rounded", id: "title", placeholder: "Lesson title" %>
  </div>

  <div class="flex flex-col mt-4">
    <label class="text-sm" for="description">Description</label>
    <%= form.rich_text_area :description, class: "rounded", id: "description", placeholder: "Lesson description" %>
  </div>

  <div class="flex flex-col mt-4">
    <label class="text-sm" for="paid">Paid</label>
    <%= form.check_box :paid, class: "rounded", id: "paid" %>
  </div>

  <div class="flex flex-col">
    <label class="text-sm" for="provider">Author / Provider</label>
    <%= form.text_field :provider, class: "rounded", id: "provider", placeholder: "Content Provider" %>
  </div>

  <div class="flex flex-col">
    <label class="text-sm" for="key">Video Key</label>
    <%= form.text_field :key, class: "rounded", id: "key", placeholder: "Video Key" %>
  </div>

  <div class="rounded mt-4">
    <div class="flex flex-col mt-4">
      <%= admin_lesson.lesson_image.present? ? (image_tag admin_lesson.lesson_image, class: "w-64 rounded mb-2") : nil %>
      <label class="text-sm" for="course_image">Cover Image</label>
      <%= form.file_field :lesson_image, id: "lesson_image" %>
    </div>
  </div>

  <div class="mt-4">
    <%= form.submit "Submit", class: "border rounded bg-green-500 py-2 px-4 hover:bg-green-700 hover:text-white cursor-pointer" %>
  </div>
<% end %>