<main class="flex flex-col lg:flex-row mx-auto pb-6 bg-slate-50">
  <div class="mx-auto w-full lg:px-4">

    <div class="relative flex justify-between overflow-hidden w-full bg-gradient-to-tr from-slate-900 via-sky-950 to-stone-950">
      <div class="flex flex-col sm:w-1/2 w-full p-6 rounded">
        <div class="flex flex-wrap justify-start items-center w-full mb-2">
          <% @course.groups.each do |g| %>
            <div class="bg-sky-200 text-slate-900 text-sm font-semibold mt-2 mr-2 px-2.5 py-0.5 rounded">
              <%= g.name %>
            </div>
          <% end %>
        </div>
        <span class="text-white"><%= @course.lessons.count %> <%= "Lesson".pluralize(@course.lessons.count) %></span>
        <h1 class="text-2xl text-white font-bold"><%= @course.title %></h1>
        <h2 class="text-white"><%= @course.subtitle %></h2>
      </div>
      <div class="hidden sm:flex justify-center w-1/2">
        <%= image_tag @course.course_image %>
      </div>
    </div>
    <div class="flex justify-center mt-2 px-4">
      <%= @course.description %>
    </div>
  </div>

  <div class="flex flex-col justify-start items-center">
    <%= render "sidebar" %>
    <%= link_to "Back to courses", courses_path, class: "mt-2 rounded-lg py-3 px-5 inline-block font-medium bg-blue-300" %>
  </div>

</main>
